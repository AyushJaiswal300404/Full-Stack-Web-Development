<% layout("/layouts/boilerplate") %>
<br/><br/>
<div class="container">
    <h3>All Listings</h3>
    <br/><br/>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>

        <div class="col">
            <div class="card mb-3">
                <a href="/listings/<%=listing._id%>"><img src="<%=listing.image.url%>" class="card-img-top" alt="<%=listing.title%>">
                    <div class="card-img-overlay"></div> 
                </a>
                
                <div class="card-body">
                    <h5 class="card-title"><%=listing.title%></h5>
                    <p class="card-text">â‚¹<%=listing.price ? listing.price.toLocaleString("en-IN") : 'N/A'%>/night</p>
                    <!-- <a href="/listings/<%=listing._id%>" class="btn btn-dark">View Details</a> -->
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
