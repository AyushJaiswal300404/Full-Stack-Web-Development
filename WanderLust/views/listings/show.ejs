<% layout('/layouts/boilerplate') %>
<br/><br/>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 class="mb-4">Listing Details</h3>
    </div>
    <div class="col-8 offset-2">
        <div class="card">
            <img src="<%= listing.image?.url || listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text"><%= listing.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><i class="fas fa-rupee-sign"></i> <%= listing.price.toLocaleString("en-IN") %></li>
                <li class="list-group-item text-muted"><i class="fas fa-location-dot"></i> <%= listing.location %></li>
                <li class="list-group-item text-muted"><i class="fas fa-flag"></i> <%= listing.country %></li>
            </ul>
            <div class="card-body">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
                <form class="d-inline" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<br/><br/><br/>
